<table id="index-table" class="table-index">
  <thead>
    <tr>
      <th>
        <%= sort_link(@q, :title, "Title", default_order: :desc) %></th>
      <th>
        <%= sort_link(@q, :rating, "Rating", default_order: :desc) %></th>
      <th>
        <%= sort_link(@q, :release_date, "Release Date", default_order: :desc) %></th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= link_to "#{movie.title}", movie %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.release_date %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to "New movie", new_movie_path %></td>
    </tr>
  </tfoot>
</table>

