<table>
  <thead>
    <tr>
      <th><%= sort_link(@q, :title, "Title", default_order: :asc) %></th>
      <th><%= sort_link(@q, :rating, "Rating") %></th>
      <th><%= sort_link(@q, :release_date, "Release Date") %></th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= link_to "#{movie.title}", movie %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.release_date %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to "New movie", new_movie_path %></td>
    </tr>
  </tfoot>
</table>

